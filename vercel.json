{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "ROBLOX_API_KEY": "@roblox_api_key",
    "ROBLOX_UNIVERSE_ID": "@roblox_universe_id",
    "WEBHOOK_SECRET": "@webhook_secret"
  }
}
